<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mgmt_page_container"
    android:background="@color/color_background"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/mgmt_page_status_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?android:statusBarColor"
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/mgmt_page_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mgmt_page_status_bar"
        android:background="?android:statusBarColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/mgmt_page_item_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mgmt_page_toolbar"
        app:layout_constraintBottom_toTopOf="@id/mgmt_page_navigation_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <cn.alvkeke.dropto.ui.comonent.MgmtItemView
            android:id="@+id/mgmt_page_item_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <cn.alvkeke.dropto.ui.comonent.MgmtItemView
            android:id="@+id/mgmt_page_item_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:id="@+id/mgmt_page_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?android:navigationBarColor"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>